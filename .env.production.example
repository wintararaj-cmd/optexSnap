# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DB_HOST=your-production-database-host.com
DB_PORT=5432
DB_NAME=ruchi_restaurant
DB_USER=your-database-username
DB_PASSWORD=your-secure-database-password

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@ruchi.com
ADMIN_PASSWORD=change-this-to-secure-password

# Application URL
NEXT_PUBLIC_API_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Google Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: SMS/WhatsApp API (for future features)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890

# Optional: Payment Gateway (for future features)
# RAZORPAY_KEY_ID=your-razorpay-key
# RAZORPAY_KEY_SECRET=your-razorpay-secret

# Security
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
